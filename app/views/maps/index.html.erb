
 <div class="row"> 
  <div class="nav-left">
	<form action="/maps" method="POST" >

		<div class="form-group">
			<div class="fieldgroup">
				<label>Title</label>
				<input  class="form-control" id ="title" name ="pin[name]" type= "text">
			</div>	
			<div class="fieldgroup">	
				<label> Latitude</label>
				<input  data-validation="number" data-validation-allowing="float" class="form-control" id ="lat" name ="pin[lat]" type= "text">
			</div>
			<div class="fieldgroup">		
				<label>Longitude</label>
				<input  data-validation="number"  data-validation-allowing="float" class="form-control" id ="lng" name ="pin[lng]" type= "text">
			</div>			
			<button type="submit" class="btn">Try it</button>
			</div>
	</form>
    </div>    

    <div class="map-wrap">
      <%= image_tag 'plus.png', id: 'toggle', class: 'toggle' %>
      <div id="map-canvas"></div>
    </div> 
</div>
